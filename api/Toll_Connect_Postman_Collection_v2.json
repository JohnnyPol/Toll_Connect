{
    "info": {
        "name": "Toll Connect API",
        "description": "This is the Postman collection for the Toll Connect REST API, which facilitates toll interoperability across multiple operators. All endpoints require authentication via JWT tokens obtained from the login endpoint.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{jwt_token}}",
                "type": "string"
            }
        ]
    },
    "item": [
        {
            "name": "Login",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/x-www-form-urlencoded"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/login",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "login"
                    ]
                },
                "body": {
                    "mode": "urlencoded",
                    "urlencoded": [
                        {
                            "key": "username",
                            "value": "user123",
                            "type": "text"
                        },
                        {
                            "key": "password",
                            "value": "password123",
                            "type": "text"
                        }
                    ]
                },
                "description": "Logs in a user and returns a JWT token to be used in subsequent requests."
            },
            "response": [
                {
                    "name": "200 OK",
                    "status": "200 OK",
                    "code": 200,
                    "body": "{\n    \"token\": \"FOO\"\n}",
                    "header": [
                        {
                            "key": "Content-Type",
                            "value": "application/json"
                        }
                    ]
                },
                {
                    "name": "400 Bad Request",
                    "status": "400 Bad Request",
                    "code": 400,
                    "body": "{\n    \"error\": \"Invalid username or password\"\n}",
                    "header": [
                        {
                            "key": "Content-Type",
                            "value": "application/json"
                        }
                    ]
                }
            ]
        },
        {
            "name": "Logout",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "X-OBSERVATORY-AUTH",
                        "value": "{{jwt_token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/logout",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "logout"
                    ]
                },
                "description": "Logs out the authenticated user by invalidating their session token."
            },
            "response": [
                {
                    "name": "200 OK",
                    "status": "200 OK",
                    "code": 200,
                    "body": "",
                    "header": []
                },
                {
                    "name": "401 Not Authorized",
                    "status": "401 Not Authorized",
                    "code": 401,
                    "body": "{\"error\": \"Unauthorized\"}",
                    "header": [
                        {
                            "key": "Content-Type",
                            "value": "application/json"
                        }
                    ]
                }
            ]
        },
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "X-OBSERVATORY-AUTH",
                        "value": "{{jwt_token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/admin/healthcheck",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "admin",
                        "healthcheck"
                    ]
                },
                "description": "Checks the connectivity between the API and the database."
            },
            "response": [
                {
                    "name": "200 OK",
                    "status": "200 OK",
                    "code": 200,
                    "body": "{\n    \"status\": \"OK\",\n    \"dbconnection\": \"Connected\",\n    \"n_stations\": 10,\n    \"n_tags\": 5000,\n    \"n_passes\": 200000\n}",
                    "header": [
                        {
                            "key": "Content-Type",
                            "value": "application/json"
                        }
                    ]
                },
                {
                    "name": "401 Not Authorized",
                    "status": "401 Not Authorized",
                    "code": 401,
                    "body": "{\"status\": \"failed\", \"dbconnection\": \"Disconnected\"}",
                    "header": [
                        {
                            "key": "Content-Type",
                            "value": "application/json"
                        }
                    ]
                }
            ]
        },
        {
            "name": "Get Toll Station Passes",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "X-OBSERVATORY-AUTH",
                        "value": "{{jwt_token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/tollStationPasses/NAO01/20241101/20241130",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "tollStationPasses",
                        "NAO01",
                        "20241101",
                        "20241130"
                    ],
                    "query": [
                        {
                            "key": "format",
                            "value": "json"
                        }
                    ]
                },
                "description": "Retrieves all toll station passes for a specific toll station (NAO01) within the given date range. The response includes details such as pass ID, timestamp, tag ID, provider, pass type, and charge."
            },
            "response": [
                {
                    "name": "200 OK",
                    "status": "200 OK",
                    "code": 200,
                    "body": "{\n    \"stationID\": \"NAO01\",\n    \"stationOperator\": \"OperatorA\",\n    \"requestTimestamp\": \"2024-11-01 12:00\",\n    \"periodFrom\": \"20241101\",\n    \"periodTo\": \"20241130\",\n    \"nPasses\": 2,\n    \"passList\": [\n        {\n            \"passIndex\": 1,\n            \"passID\": \"PASS1234\",\n            \"timestamp\": \"2024-11-02 14:30\",\n            \"tagID\": \"TAG001\",\n            \"tagProvider\": \"ProviderA\",\n            \"passType\": \"home\",\n            \"passCharge\": 3.5\n        },\n        {\n            \"passIndex\": 2,\n            \"passID\": \"PASS5678\",\n            \"timestamp\": \"2024-11-05 16:00\",\n            \"tagID\": \"TAG002\",\n            \"tagProvider\": \"ProviderB\",\n            \"passType\": \"visitor\",\n            \"passCharge\": 5.0\n        }\n    ]\n}",
                    "header": [
                        {
                            "key": "Content-Type",
                            "value": "application/json"
                        }
                    ]
                },
                {
                    "name": "204 No Content",
                    "status": "204 No Content",
                    "code": 204,
                    "body": "",
                    "header": []
                },
                {
                    "name": "400 Bad Request",
                    "status": "400 Bad Request",
                    "code": 400,
                    "body": "{\"error\": \"Invalid date range\"}",
                    "header": [
                        {
                            "key": "Content-Type",
                            "value": "application/json"
                        }
                    ]
                }
            ]
        },
        {
            "name": "Passes Cost Between Operators",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "X-OBSERVATORY-AUTH",
                        "value": "{{jwt_token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/passesCost/OpA/OpB/20240101/20240131",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "passesCost",
                        "OpA",
                        "OpB",
                        "20240101",
                        "20240131"
                    ]
                },
                "description": "Returns the number of toll passes and total cost that Operator B owes to Operator A for the given date range."
            },
            "response": [
                {
                    "name": "200 OK",
                    "status": "200 OK",
                    "code": 200,
                    "body": "{\n    \"tollOpID\": \"OpA\",\n    \"tagOpID\": \"OpB\",\n    \"requestTimestamp\": \"2024-01-31 10:00\",\n    \"periodFrom\": \"20240101\",\n    \"periodTo\": \"20240131\",\n    \"nPasses\": 1500,\n    \"passesCost\": 7500.0\n}",
                    "header": [
                        {
                            "key": "Content-Type",
                            "value": "application/json"
                        }
                    ]
                },
                {
                    "name": "204 No Content",
                    "status": "204 No Content",
                    "code": 204,
                    "body": "",
                    "header": []
                },
                {
                    "name": "400 Bad Request",
                    "status": "400 Bad Request",
                    "code": 400,
                    "body": "{\"error\": \"Invalid operator ID\"}",
                    "header": [
                        {
                            "key": "Content-Type",
                            "value": "application/json"
                        }
                    ]
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "https://localhost:9115/api"
        },
        {
            "key": "jwt_token",
            "value": ""
        }
    ]
}