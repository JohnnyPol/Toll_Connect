{
	"tasks": {
		"dev": "deno run -A --node-modules-dir npm:vite",
		"build": "deno run -A --node-modules-dir npm:vite build",
		"preview": "deno run -A --node-modules-dir npm:vite preview",
		"serve": "deno run --allow-net --allow-read jsr:@std/http@1/file-server dist/"
	},
	"compilerOptions": {
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"jsxImportSourceTypes": "@types/react"
	},
	"imports": {
		"@/": "./src/",
		"@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.0",
		"@hookform/resolvers": "npm:@hookform/resolvers@^3.10.0",
		"@radix-ui/react-checkbox": "npm:@radix-ui/react-checkbox@^1.1.3",
		"@radix-ui/react-dialog": "npm:@radix-ui/react-dialog@^1.1.4",
		"@radix-ui/react-label": "npm:@radix-ui/react-label@^2.1.1",
		"@radix-ui/react-popover": "npm:@radix-ui/react-popover@^1.1.4",
		"@radix-ui/react-scroll-area": "npm:@radix-ui/react-scroll-area@^1.2.2",
		"@radix-ui/react-select": "npm:@radix-ui/react-select@^2.1.4",
		"@radix-ui/react-separator": "npm:@radix-ui/react-separator@^1.1.1",
		"@radix-ui/react-slot": "npm:@radix-ui/react-slot@^1.1.1",
		"@radix-ui/react-switch": "npm:@radix-ui/react-switch@^1.1.2",
		"@radix-ui/react-tooltip": "npm:@radix-ui/react-tooltip@^1.1.6",
		"@types/node": "npm:@types/node@^22.10.2",
		"@types/react": "npm:@types/react@^18.3.12",
		"@types/react-dom": "npm:@types/react-dom@^18.3.1",
		"@vis.gl/react-google-maps": "npm:@vis.gl/react-google-maps@^1.4.2",
		"@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.3.4",
		"autoprefixer": "npm:autoprefixer@^10.4.20",
		"axios": "npm:axios@^1.7.9",
		"axios-cache-interceptor": "npm:axios-cache-interceptor@^1.6.2",
		"chart.js": "npm:chart.js@^4.4.7",
		"class-variance-authority": "npm:class-variance-authority@^0.7.1",
		"clsx": "npm:clsx@^2.1.1",
		"date-fns": "npm:date-fns@^4.1.0",
		"googlemaps": "npm:googlemaps@^1.12.0",
		"lucide-react": "npm:lucide-react@^0.469.0",
		"maplibre-gl": "npm:maplibre-gl@^5.0.0",
		"next-themes": "npm:next-themes@^0.4.4",
		"postcss": "npm:postcss@^8.4.49",
		"react": "npm:react@^18.3.1",
		"react-chartjs-2": "npm:react-chartjs-2@^5.3.0",
		"react-day-picker": "npm:react-day-picker@^8.9.1",
		"react-dom": "npm:react-dom@^18.3.1",
		"react-hook-form": "npm:react-hook-form@^7.54.2",
		"react-map-gl": "npm:react-map-gl@^7.1.8",
		"react-router-dom": "npm:react-router-dom@^7.1.1",
		"sonner": "npm:sonner@^1.7.2",
		"tailwind-merge": "npm:tailwind-merge@^2.6.0",
		"tailwindcss": "npm:tailwindcss@^3.4.17",
		"tailwindcss-animate": "npm:tailwindcss-animate@^1.0.7",
		"vite": "npm:vite@^6.0.1",
		"zod": "npm:zod@^3.24.1"
	},
	"fmt": {
		"indentWidth": 2,
		"useTabs": true,
		"lineWidth": 80,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "never"
	}
}
